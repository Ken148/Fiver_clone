<h1>All Requests</h1>

<% @requests.each do |request| %>
  <div class="request">
    <h3>
      <% if request.user.seller_profile.present? %>
        <%= request.user.seller_profile.full_name %>
      <% else %>
        <%= request.user.email %>
      <% end %> - <%= request.post.title %>
    </h3>
    <p><strong>Message:</strong> <%= request.message %></p>
    <p><strong>Price Range:</strong> <%= request.price_range.capitalize %></p>
    <p><strong>Posted on:</strong> <%= request.created_at.strftime("%B %d, %Y") %></p>
  </div>
<% end %>
