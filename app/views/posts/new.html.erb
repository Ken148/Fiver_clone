<h1><%= t('posts.new.title') %></h1> <!-- Translated title for "Create a New Post" -->

<%= form_with(model: @seller_profile, local: true, html: { multipart: true }) do |form| %>
  <% if @seller_profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@seller_profile.errors.count, t('errors.count_errors')) %> <%= t('errors.prohibited_post') %></h2> <!-- Translated error message -->
      <ul>
        <% @seller_profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :full_name, t('posts.new.full_name_label') %> <!-- Translated label for "Full Name" -->
    <%= form.text_field :full_name %>
  </div>

  <div class="field">
    <%= form.label :display_name, t('posts.new.display_name_label') %> <!-- Translated label for "Display Name" -->
    <%= form.text_field :display_name %>
  </div>

  <div class="field">
    <%= form.label :profile_picture, t('posts.new.profile_picture_label') %> <!-- Translated label for "Profile Picture" -->
    <%= form.file_field :profile_picture %>
  </div>

  <div class="field">
    <%= form.label :description, t('posts.new.description_label') %> <!-- Translated label for "Description" -->
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :language, t('posts.new.language_label') %> <!-- Translated label for "Language" -->
    <%= form.text_field :language %>
  </div>

  <div class="actions">
    <%= form.submit t('posts.new.create_post') %> <!-- Translated submit button text -->
  </div>
<% end %>

<%= link_to t('posts.new.back_to_all_posts'), posts_path %> <!-- Translated link for "Back to All Posts" -->
