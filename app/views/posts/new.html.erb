<h1><%= t('posts.new.title') %></h1> <!-- Translated title for "Create a New Post" -->

<%= form_with(model: @post, local: true, html: { multipart: true }) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, t('errors.count_errors')) %> <%= t('errors.prohibited_post') %></h2> <!-- Translated error message -->
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, t('posts.new.title_label') %> <!-- Translated label for "Title" -->
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content, t('posts.new.content_label') %> <!-- Translated label for "Content" -->
    <%= form.text_area :content %>
  </div>

  <!-- Select a gig for the post -->
  <div class="field">
    <%= form.label :gig_id, t('posts.new.select_gig') %> <!-- Translated label for "Select Gig" -->
    <%= form.collection_select :gig_id, @gigs, :id, :title, { prompt: t('posts.new.select_gig_prompt') } %> <!-- List available gigs -->
  </div>

  <div class="actions">
    <%= form.submit t('posts.new.create_post') %> <!-- Translated button text for "Create Post" -->
  </div>
<% end %>

<%= link_to t('posts.new.back_to_all_posts'), posts_path %> <!-- Translated link for "Back to All Posts" -->
