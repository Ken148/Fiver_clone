<h1><%= t('posts.new.title') %></h1> <!-- Translated title for "Create a New Post" -->

<%= form_with(model: @post, local: true, html: { multipart: true }) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, t('errors.count_errors')) %> <%= t('errors.prohibited_post') %></h2> <!-- Translated error message -->
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Post Fields -->
  <div class="field">
    <%= form.label :title, t('posts.new.title_label') %>
    <%= form.text_field :title, required: true %>
  </div>

  <div class="field">
    <%= form.label :content, t('posts.new.content_label') %>
    <%= form.text_area :content, required: true %>
  </div>

  <!-- Pricing, Description, and Image Fields for Basic, Standard, and Premium -->
  <fieldset>
    <legend><%= t('posts.new.gig_details') %></legend>

    <%= form.fields_for :gig, @post.gig do |gig_form| %>

      <!-- Basic Plan -->
      <div class="pricing-group">
        <h3><%= t('posts.new.basic_plan') %></h3>

        <div class="field">
          <%= gig_form.label :basic_price, t('posts.new.basic_price_label') %>
          <%= gig_form.number_field :basic_price, required: true %>
        </div>

        <div class="field">
          <%= gig_form.label :basic_description, t('posts.new.basic_description_label') %>
          <%= gig_form.text_area :basic_description, placeholder: "Enter description for Basic plan", required: true %>
        </div>

        <div class="field">
          <%= gig_form.label :basic_image, t('posts.new.basic_image_label') %>
          <%= gig_form.file_field :basic_image, required: true %>
        </div>
      </div>

      <!-- Standard Plan -->
      <div class="pricing-group">
        <h3><%= t('posts.new.standard_plan') %></h3>

        <div class="field">
          <%= gig_form.label :standard_price, t('posts.new.standard_price_label') %>
          <%= gig_form.number_field :standard_price, required: true %>
        </div>

        <div class="field">
          <%= gig_form.label :standard_description, t('posts.new.standard_description_label') %>
          <%= gig_form.text_area :standard_description, placeholder: "Enter description for Standard plan", required: true %>
        </div>

        <div class="field">
          <%= gig_form.label :standard_image, t('posts.new.standard_image_label') %>
          <%= gig_form.file_field :standard_image, required: true %>
        </div>
      </div>

      <!-- Premium Plan -->
      <div class="pricing-group">
        <h3><%= t('posts.new.premium_plan') %></h3>

        <div class="field">
          <%= gig_form.label :premium_price, t('posts.new.premium_price_label') %>
          <%= gig_form.number_field :premium_price, required: true %>
        </div>

        <div class="field">
          <%= gig_form.label :premium_description, t('posts.new.premium_description_label') %>
          <%= gig_form.text_area :premium_description, placeholder: "Enter description for Premium plan", required: true %>
        </div>

        <div class="field">
          <%= gig_form.label :premium_image, t('posts.new.premium_image_label') %>
          <%= gig_form.file_field :premium_image, required: true %>
        </div>
      </div>

    <% end %>
  </fieldset>

  <div class="actions">
    <%= form.submit t('posts.new.create_post') %> <!-- Translated submit button text -->
  </div>
<% end %>

<%= link_to t('posts.new.back_to_all_posts'), posts_path %> <!-- Translated link for "Back to all gigs" -->
