<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

<p><strong>Created by:</strong> <%= @post.user.seller_profile.full_name %></p>

<!-- Display user's profile picture (avatar) if present -->
<% if @post.user.seller_profile.profile_picture.attached? %>
  <div class="creator-avatar">
    <%= image_tag url_for(@post.user.seller_profile.profile_picture), alt: "#{@post.user.seller_profile.full_name}'s Avatar", class: 'avatar-image', width: 150 %>
  </div>
<% else %>
  <p>No Avatar</p> <!-- Fallback if no profile picture exists -->
<% end %>

<!-- Displaying the images for the different gig tiers with 'Buy' button -->
<% if @post.gig.basic_image.present? %>
  <div class="gig-plan">
    <h4>Basic Plan</h4>
    <%= image_tag(@post.gig.basic_image, alt: "Basic Plan Image") %>
    <p><strong>Description:</strong> <%= @post.gig.basic_description %></p>
    <p><strong>Price:</strong> <%= @post.gig.basic_price %></p>
    <%= link_to 'Buy Now', buy_post_path(@post, plan: 'basic'), class: 'button buy-button' %> <!-- Buy button for basic plan -->
  </div>
<% end %>

<% if @post.gig.standard_image.present? %>
  <div class="gig-plan">
    <h4>Standard Plan</h4>
    <%= image_tag(@post.gig.standard_image, alt: "Standard Plan Image") %>
    <p><strong>Description:</strong> <%= @post.gig.standard_description %></p>
    <p><strong>Price:</strong> <%= @post.gig.standard_price %></p>
    <%= link_to 'Buy Now', buy_post_path(@post, plan: 'standard'), class: 'button buy-button' %> <!-- Buy button for standard plan -->
  </div>
<% end %>

<% if @post.gig.premium_image.present? %>
  <div class="gig-plan">
    <h4>Premium Plan</h4>
    <%= image_tag(@post.gig.premium_image, alt: "Premium Plan Image") %>
    <p><strong>Description:</strong> <%= @post.gig.premium_description %></p>
    <p><strong>Price:</strong> <%= @post.gig.premium_price %></p>
    <%= link_to 'Buy Now', buy_post_path(@post, plan: 'premium'), class: 'button buy-button' %> <!-- Buy button for premium plan -->
  </div>
<% end %>

<!-- Only show "Edit" for the post creator -->
<% if @post.user == current_user %> 
  <%= link_to t('posts.show.edit'), edit_post_path(@post), class: 'button' %> 
  |
<% end %>

<%= link_to t('posts.show.back_to_posts'), posts_path, class: 'button' %> <!-- Translated "Back to Posts" button -->
