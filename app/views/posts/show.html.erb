<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

<!-- Display user's profile information -->
<p><strong>Created by:</strong> <%= @post.user.seller_profile.full_name %></p>

<!-- Display user's profile picture (avatar) if present -->
<% if @post.user.seller_profile.profile_picture.attached? %>
  <div class="creator-avatar">
    <%= image_tag url_for(@post.user.seller_profile.profile_picture), alt: "#{@post.user.seller_profile.full_name}'s Avatar", class: 'avatar-image', width: 150 %>
  </div>
<% else %>
  <p>No Avatar</p> <!-- Fallback if no profile picture exists -->
<% end %>

<!-- Display creator's occupation -->
<p><strong>Occupation:</strong> <%= @post.user.seller_profile.occupation %></p>

<!-- Image Gallery Container -->
<div class="container">
  <% plan_images = [
      { image: @post.gig.basic_image, name: "Basic Plan", price: @post.gig.basic_price, description: @post.gig.basic_description },
      { image: @post.gig.standard_image, name: "Standard Plan", price: @post.gig.standard_price, description: @post.gig.standard_description },
      { image: @post.gig.premium_image, name: "Premium Plan", price: @post.gig.premium_price, description: @post.gig.premium_description }
  ] %>

  <% plan_images.each_with_index do |plan, index| %>
    <% if plan[:image].present? %>
      <div class="mySlides">
        <div class="numbertext"><%= index + 1 %> / 3</div>
        <%= image_tag(plan[:image], alt: "#{plan[:name]} Image", class: "slide-image") %>
        <div class="caption-container">
          <h3><%= plan[:name] %></h3>
          <p><%= plan[:description] %></p>
          <p><strong>Price:</strong> $<%= plan[:price] %></p>
        </div>
      </div>
    <% end %>
  <% end %>

  <!-- Navigation arrows -->
  <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>

<!-- Contact Form to send an order to the creator -->
<h2>Send an Order</h2>
<p>If you're interested in placing an order or have specific requirements, use the form below to send a detailed description to the creator.</p>

<%= form_with(url: send_message_post_path(@post), method: :post, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :message, "Describe your order:" %>
    <%= form.text_area :message, class: "form-control", placeholder: "Describe your order details here" %>
  </div>

  <div class="form-group">
    <%= form.label :price_range, "Choose a plan:" %>
    <%= form.select :price_range, [["Basic Plan", "basic"], ["Standard Plan", "standard"], ["Premium Plan", "premium"]], class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Send Order", class: "btn btn-primary" %>
  </div>
<% end %>

<script>
  let slideIndex = 1;
  showSlides(slideIndex);

  // Next/previous controls
  function plusSlides(n) {
    showSlides(slideIndex += n);
  }

  // Thumbnail image controls
  function currentSlide(n) {
    showSlides(slideIndex = n);
  }

  function showSlides(n) {
    let slides = document.getElementsByClassName("mySlides");

    if (n > slides.length) { slideIndex = 1 }
    if (n < 1) { slideIndex = slides.length }

    // Hide all slides
    for (let i = 0; i < slides.length; i++) {
      slides[i].style.display = "none";  // Hide all slides
    }

    // Show the current slide
    slides[slideIndex - 1].style.display = "block";  // Only show the current slide
  }
</script>

<style>
  /* Styling for Avatar */
  .creator-avatar {
    margin-top: 20px;
    text-align: center;
  }

  /* Styling for Avatar Image */
  .avatar-image {
    border-radius: 50%;
    border: 2px solid #ddd;
  }

  /* Form Styling */
  .form-group {
    margin-bottom: 15px;
  }

  .form-control {
    width: 100%;
    padding: 10px;
    font-size: 16px;
    margin-top: 5px;
  }

  .btn-primary {
    background-color: #1DBF73;
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 16px;
  }

  .btn-primary:hover {
    background-color: #138c53;
  }

  /* Styling for the Image Gallery */
  .container {
    position: relative;
    width: 100%;
    max-width: 600px;
    margin: auto;
  }

  .mySlides {
    display: none;
    width: 100%;
    transition: opacity 1s ease-in-out;
  }

  .slide-image {
    width: 100%;
    height: auto;
    object-fit: cover;
    max-height: 400px; /* Ensures images don't overflow vertically */
  }

  .cursor {
    cursor: pointer;
  }

  .prev, .next {
    cursor: pointer;
    position: absolute;
    top: 50%;
    width: auto;
    padding: 16px;
    margin-top: -22px;
    color: white;
    font-weight: bold;
    font-size: 20px;
    border-radius: 0 3px 3px 0;
    user-select: none;
    -webkit-user-select: none;
  }

  .next {
    right: 0;
    border-radius: 3px 0 0 3px;
  }

  .prev:hover, .next:hover {
    background-color: rgba(0, 0, 0, 0.8);
  }

  .numbertext {
    color: #f2f2f2;
    font-size: 12px;
    padding: 8px 12px;
    position: absolute;
    top: 0;
  }

  .caption-container {
    text-align: center;
    background-color: #222;
    padding: 2px 16px;
    color: white;
  }
</style>
