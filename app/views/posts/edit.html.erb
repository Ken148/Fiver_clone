<h1><%= t('posts.edit.title') %></h1> <!-- Translated "Edit Post" -->

<%= form_with(model: @post, local: true) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('errors.prohibited', count: @post.errors.count) %></h2> <!-- Translated error heading -->
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, t('posts.form.title') %> <!-- Translated label for "Title" -->
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content, t('posts.form.content') %> <!-- Translated label for "Content" -->
    <%= form.text_area :content %>
  </div>

  <!-- Select a gig for the post -->
  <div class="field">
    <%= form.label :gig_id, t('posts.form.select_gig') %> <!-- Translated label for "Select Gig" -->
    <%= form.collection_select :gig_id, @gigs, :id, :title, { prompt: t('posts.form.select_gig_prompt') } %>
  </div>

  <div class="actions">
    <%= form.submit t('posts.form.update_post') %> <!-- Translated button text for "Update Post" -->
  </div>
<% end %>

<%= link_to t('posts.back'), @post %> <!-- Translated "Back" -->
