<h1><%= t('gig_creation.title') %></h1>

<p><%= t('gig_creation.description') %></p>

<%= form_with(model: @seller_profile, url: some_gig_creation_path, method: :post) do |form| %>
  <div class="form-group">
    <%= form.label :gig_title, t('gig_creation.gig_title') %>
    <%= form.text_field :gig_title, placeholder: t('gig_creation.gig_title_placeholder') %>
  </div>

  <div class="form-group">
    <%= form.label :gig_description, t('gig_creation.gig_description') %>
    <%= form.text_area :gig_description, placeholder: t('gig_creation.gig_description_placeholder') %>
  </div>

  <%= form.submit t('gig_creation.create_gig'), class: 'btn-submit' %>
<% end %>
