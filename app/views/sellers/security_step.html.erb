<h1>Account Security</h1>

<%= form_with(model: @seller_profile, url: create_gig_step_seller_path(@seller_profile), method: :post) do |form| %>
  <div class="form-group">
    <%= form.label :email, "Email" %>
    <%= form.email_field :email, placeholder: "Enter your email address" %>
  </div>

  <div class="form-group">
    <%= form.label :phone_number, "Phone Number" %>
    <%= form.telephone_field :phone_number, placeholder: "Enter your phone number" %>
  </div>

  <%= form.submit 'Continue', class: 'btn-submit' %>
<% end %>
