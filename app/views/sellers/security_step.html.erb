<h1><%= t('security_info.title') %></h1>

<%= form_with(model: @seller_profile, url: create_gig_step_seller_path(@seller_profile), method: :post) do |form| %>
  <div class="form-group">
    <%= form.label :email, t('security_info.email') %>
    <%= form.email_field :email, placeholder: t('security_info.email_placeholder') %>
  </div>

  <div class="form-group">
    <%= form.label :phone_number, t('security_info.phone_number') %>
    <%= form.telephone_field :phone_number, placeholder: t('security_info.phone_number_placeholder') %>
  </div>

  <%= form.submit t('security_info.continue'), class: 'btn-submit' %>
<% end %>
