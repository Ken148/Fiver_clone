<h1>My Orders</h1>

<% if @orders.any? %>
  <table>
    <thead>
      <tr>
        <th>Post Title</th>
        <th>Customer</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.title %></td>
          <td><%= order.user.email %></td>
          <td><%= order.status %></td>
          <td>
            <%= link_to 'View Order', order_path(order) %> |
            <%= link_to 'Reply', reply_order_path(order), method: :patch %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No orders yet.</p>
<% end %>
