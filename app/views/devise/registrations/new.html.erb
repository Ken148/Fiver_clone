<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>

  <%= link_to 'Back to Login', new_user_session_path, class: 'back-to-login-btn' %>
<% end %>

<style>
body {
  background-color: #121212; /* Dark mode background */
  color: #fff;
  font-family: 'Segoe UI', Roboto, sans-serif;
  margin: 0;
  padding: 1.5em;
}

h2 {
  text-align: center;
  margin-bottom: 1em;
  color: #ffffff;
}

.field {
  margin-bottom: 1.5em;
}

label {
  display: block;
  font-weight: bold;
  margin-bottom: 0.5em;
  color: #ddd;
}

input[type="email"],
input[type="password"] {
  width: 100%;
  padding: 0.75em;
  border-radius: 8px;
  border: none;
  background-color: #2a2a2a;
  color: #fff;
  font-size: 1em;
  margin-bottom: 1em;
}

input[type="email"]:focus,
input[type="password"]:focus {
  outline: none;
  border: 2px solid #007c91;
  background-color: #333;
}

input[type="checkbox"] {
  margin-right: 0.5em;
}

.actions input[type="submit"] {
  background-color: #007c91; /* Matching the blue in nav and button */
  color: white;
  padding: 0.8em 1em;
  width: 100%;
  border: none;
  border-radius: 8px;
  font-size: 1em;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.actions input[type="submit"]:hover {
  background-color: #009bb3;
}

.btn-link {
  color: #66ccff;
  text-decoration: underline;
  display: block;
  text-align: center;
  margin-top: 1em;
}

@media (min-width: 600px) {
  body {
    max-width: 400px;
    margin: 2em auto;
  }
}
</style>